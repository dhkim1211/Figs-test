<link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightslider/1.1.6/css/lightslider.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/lightslider/1.1.6/js/lightslider.min.js"></script>

<script type="text/javascript">
  $(document).ready(function() {
    $("#lightSlider").lightSlider({
      item: 1,
      autoWidth:false,
      adaptiveHeight: true
    });
  });
</script>

<div class="hero-slider-section">
  <div class="">
    <ul id="lightSlider">
      {% for block in section.blocks %}
        <li id="slide--{{block.id}}" class="hero-slider-section__slide"
          style="{% if block.settings.image %}background-image: url({{ block.settings.image |  img_url: 'master' }});{% endif %}
                height: {{block.settings.slider_height}}px;
                background-position: {{block.settings.background_position_x}} {{block.settings.background_position_y}};
                background-color: {{block.settings.background_color}};
        ">
          <div class="hero-slider-section__caption-wrapper"
          style="text-align: {{block.settings.caption_horizontal}};
                top: {{block.settings.caption_vertical}}%"
          >
            <div class="hero-slider-section__caption-inner">
              {% if block.settings.title != 'blank' %}
                <h2 class="hero-slider-section__title"
                  style="font-size: {{block.settings.title_font_size}}px;
                        letter-spacing: {{block.settings.title_letter_spacing}}px;
                        line-height: {{block.settings.title_line_height}};"
                >
                  {{ block.settings.title }}
                </h2>
              {% endif %}
              {% if block.settings.subheading != 'blank' %}
                <p class="hero-slider-section__subtitle"
                  style="font-size: {{block.settings.subtitle_font_size}};
                  letter-spacing: {{block.settings.subtitle_letter_spacing}}px;
                  line-height: {{block.settings.subtitle_line_height}};"
                >
                  {{ block.settings.subtitle }}
                </p>
              {% endif %}
              {% if block.settings.button_link_url != blank %}
                <div class="hero-slider-section__button btn"
                  style="padding: {{block.settings.button_height}}px {{block.settings.button_width}}px;
                        background-color: {{block.settings.button_bg_color}};
                        border-radius: {{block.settings.button_border_radius}}px;"
                >
                  <a href="{{ block.settings.button_link_url }}"
                    style="color: {{block.settings.button_color}};"
                  >
                    {{ block.settings.button_text }}
                   </a>
                </div>
              {% endif %}
            </div>
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>

<style>
  .hero-slider-section__slide {
    position: relative;
    background-size: cover;
    background-repeat: no-repeat;
  }

  .hero-slider-section__caption-wrapper {
    position: absolute;
    width: 100%;
    padding: 0 5%;
  }

  .hero-slider-section__title {
    margin-bottom: 20px;
  }

  .hero-slider-section__subtitle {
    margin-bottom: 20px;
  }
</style>

{% schema %}
{
  "name": "Hero Slider",
  "class": "section-hero-slider",
  "settings": [

  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "range",
          "id": "slider_height",
          "min": 200,
          "max": 800,
          "step": 10,
          "unit": "px",
          "label": "Slider Height",
          "default": 500
        },
        {
          "type": "select",
          "id": "background_position_x",
          "options": [
            { "value": "left", "label": "Left"},
            { "value": "center", "label": "Center"},
            { "value": "right", "label": "Right"}
          ],
          "label": "Background Horizontal Position",
          "default": "center"
        },
        {
          "type": "select",
          "id": "background_position_y",
          "options": [
            { "value": "top", "label": "Top"},
            { "value": "center", "label": "Center"},
            { "value": "bottom", "label": "Bottom"}
          ],
          "label": "Background Vertical Position",
          "default": "center"
        },
        {
          "type": "color",
          "id": "background_color",
          "label": "Background Color",
          "default": "#ffffff"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "range",
          "id": "title_font_size",
          "min": 16,
          "max": 50,
          "step": 1,
          "unit": "px",
          "label": "Title Font Size",
          "default": 36
        },
        {
          "type": "range",
          "id": "title_letter_spacing",
          "min": -10,
          "max": 10,
          "step": 1,
          "unit": "px",
          "label": "Title Letter Spacing",
          "default": 1
        },
        {
          "type": "range",
          "id": "title_line_height",
          "min": 0,
          "max": 5,
          "step": 0.1,
          "label": "Title Line Height",
          "default": 1
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Sub-Title"
        },
        {
          "type": "range",
          "id": "subtitle_font_size",
          "min": 10,
          "max": 50,
          "step": 1,
          "unit": "px",
          "label": "Sub-title Font Size",
          "default": 16
        },
        {
          "type": "range",
          "id": "subtitle_letter_spacing",
          "min": -10,
          "max": 10,
          "step": 1,
          "unit": "px",
          "label": "Sub-Title Letter Spacing",
          "default": 1
        },
        {
          "type": "range",
          "id": "subtitle_line_height",
          "min": 0,
          "max": 5,
          "step": 0.1,
          "label": "Sub-Title Line Height",
          "default": 1
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "text",
          "id": "button_link_url",
          "label": "Button Link URL"
        },
        {
          "type": "range",
          "id": "button_width",
          "min": 0,
          "max": 50,
          "step": 1,
          "unit": "px",
          "label": "Button Horizontal Padding",
          "default": 15
        },
        {
          "type": "range",
          "id": "button_height",
          "min": 0,
          "max": 30,
          "step": 1,
          "unit": "px",
          "label": "Button Vertical Padding",
          "default": 9
        },
        {
          "type": "color",
          "id": "button_bg_color",
          "label": "Button Background Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "button_color",
          "label": "Button Text Color",
          "default": "#ffffff"
        },
        {
          "type": "range",
          "id": "button_border_radius",
          "min": 0,
          "max": 25,
          "step": 1,
          "unit": "px",
          "label": "Button Border Radius",
          "default": 0
        },
        {
          "type": "select",
          "id": "caption_horizontal",
          "label": "Caption Horizontal Position",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left"
        },
        {
          "type": "range",
          "id": "caption_vertical",
          "min": 5,
          "max": 50,
          "step": 5,
          "unit": "%",
          "label": "Caption Vertical Position",
          "default": 35
        }
      ]
    }
  ],
  "max_blocks": 6
}

{% endschema %}
